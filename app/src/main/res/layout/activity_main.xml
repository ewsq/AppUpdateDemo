<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yzq.appupdate.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通升级"
        android:id="@+id/button_update1" />

    <Button
        android:id="@+id/button_update2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="强制升级"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/button_update1"/>

    <TextView
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="AppUpdateDemo: 可以自动处理App升级判断,下载及安装.\n使用步骤:1:获取appUpdateSDK对象:\nAppUpdateSDK appUpdateSDK = AppUpdateSDK.getInstance(this);\n2:调用beginDealUpdate:\nappUpdateSDK.beginDealUpdate(context,versionCode,versionName,updateDesc,apkUrl,isForceUpdate); " />
</RelativeLayout>
